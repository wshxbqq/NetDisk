<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="PingShu.Entity.Story,PingShu.Entity" table="Story" lazy = "false">

		<id name="StoryId" column="Story_ID" type="Int32" unsaved-value="0">
			<generator class="native"/>
		</id>
		<many-to-one name="BookId" column="Book_ID" class="PingShu.Entity.Book,PingShu.Entity" />
		<property column="Story_Name" type="String" name="StoryName" length="100" />
		<property column="Story_Path" type="String" name="StoryPath" length="100" />
		<property column="Story_Details" type="String" name="StoryDetails" length="500" />
		<property column="Story_ListenCount" type="Int32" name="StoryListenCount" not-null="true" />
		<property column="Story_Sort" type="Int32" name="StorySort" />
		
	</class>
</hibernate-mapping>
