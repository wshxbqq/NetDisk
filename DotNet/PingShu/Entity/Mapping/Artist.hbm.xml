<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2">
	<class name="PingShu.Entity.Artist,PingShu.Entity" table="Artist" lazy = "false">

		<id name="ArtistId" column="Artist_ID" type="Int32" unsaved-value="0">
			<generator class="native"/>
		</id>
		<bag name="BookList" inverse="true" lazy="true" >
			<key column="Artist_ID" />
			<one-to-many class="PingShu.Entity.Book,PingShu.Entity" />
		</bag>
		<many-to-one name="TypeId" column="Type_ID" class="PingShu.Entity.ArtType,PingShu.Entity" />
		<property column="Artist_Name" type="String" name="ArtistName" length="100" />
		<property column="Artist_Ico" type="String" name="ArtistIco" length="200" />
		<property column="Artist_Details" type="String" name="ArtistDetails" length="500" />
		
	</class>
</hibernate-mapping>
